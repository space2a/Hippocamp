<UserControl x:Class="Re_Hippocamp.Controls.HippocampUserProfile"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Re_Hippocamp.Controls"
             mc:Ignorable="d" Height="45">
    <Viewbox>
        <Grid Cursor="Hand">
            <Rectangle Fill="#33000000" RadiusX="2.753" RadiusY="2.753"></Rectangle>
            <Grid x:Name="AvatarGrid" Height="40" Width="40" Panel.ZIndex="100" VerticalAlignment="Center" HorizontalAlignment="Left" Margin="6,0,0,0" RenderTransformOrigin="0.5,0.5">
                <Rectangle Opacity="1" Margin="2,2,2,2" Name="AvatarImg1" RadiusX="4.149" RadiusY="4.149" Fill="Red"/>
            </Grid>
            <TextBlock x:Name="Username" Margin="54,0,5,0" Foreground="White" HorizontalAlignment="Left" VerticalAlignment="Center" FontSize="18" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" Style="{DynamicResource Montserrat}" Width="116" MaxWidth="116">XXXXXXXXXXXXXXXXXXXX</TextBlock>
        </Grid>
    </Viewbox>
</UserControl>
