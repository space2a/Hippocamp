<ContextMenu x:Class="Re_Hippocamp.Controls.HippocampContextMenu"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Re_Hippocamp.Controls"
             mc:Ignorable="d" ClipToBounds="True" IsOpen="True" MinWidth="200"
             >
    <ContextMenu.Template>
        <ControlTemplate>
            <Grid Background="{x:Null}" Margin="10">
                <Grid.Effect>
                    <DropShadowEffect ShadowDepth="2" Color="Black" Opacity="0.2" BlurRadius="20"/>
                </Grid.Effect>
                <StackPanel x:Name="ItemsSP">
                    
                </StackPanel>
            </Grid>
        </ControlTemplate>
    </ContextMenu.Template>
</ContextMenu>
