<UserControl x:Class="Re_Hippocamp.Controls.HippocampNotification"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Re_Hippocamp.Controls"
             mc:Ignorable="d" d:DesignWidth="250" Height="40" Name="root">
    <UserControl.Effect>
        <DropShadowEffect Opacity="0.2" ShadowDepth="4"/>
    </UserControl.Effect>
    <Grid>
        <Rectangle RadiusX="2.212" RadiusY="2.212" Fill="#CC2E56B7"></Rectangle>
        <TextBlock Foreground="White" HorizontalAlignment="Center" VerticalAlignment="Center" Text="{Binding Text, ElementName=root}" Style="{DynamicResource Montserrat}"></TextBlock>
    </Grid>
</UserControl>
